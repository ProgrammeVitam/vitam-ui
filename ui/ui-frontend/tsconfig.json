{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "noImplicitAny": true,
    "paths": {
      "vitamui-demo": ["./projects/demo/src"],
      "vitamui-identity": ["./projects/identity/src/app/"],
      "vitamui-portal": ["./projects/portal/src/app/"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
