<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/tmp/vitamui/accesslog-ui-identity.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>30</maxHistory>
      		<totalSizeCap>14GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>%h %l %u %t "%r" %s %b "%i{Referer}" "%i{User-agent}" %D %i{X-Request-ID} %i{X-TenantID} %i{X-Application-ID}</pattern>
		</encoder>
	</appender>

	<appender-ref ref="FILE" />
</configuration>
