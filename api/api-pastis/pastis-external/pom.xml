    <artifactId>pastis-external</artifactId>
    <packaging>jar</packaging>
    <name>VITAMUI Pastis API Server</name>

    <properties>
        <rpm.skip>false</rpm.skip>
        <swagger.dir>api-external</swagger.dir>
        <swagger.skip>false</swagger.skip>
    </properties>

    <dependencies>
