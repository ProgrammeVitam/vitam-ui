{
  "GATEWAY_ENABLED": {{ gateway.enabled | default(False) | lower }},
  "REFERENTIAL_URL": "{{ vitamui.referential.base_url }}",
  "VERSION_RELEASE": "{{ frontend_application_version }}",
  "PLATFORM_NAME": "{{ vitamui_platform_informations.platform_name }}",
  "INGEST_URL": null,
  "PORTAL_TITLE": "{{ portal.title }}",
  "THEME_COLORS": {
    "vitamui-primary": "{{ vitamui_platform_informations.theme.theme_colors.vitamui_primary }}",
    "vitamui-secondary": "{{ vitamui_platform_informations.theme.theme_colors.vitamui_secondary }}",
    "vitamui-tertiary": "{{ vitamui_platform_informations.theme.theme_colors.vitamui_tertiary }}",
    "vitamui-header-footer": "{{ vitamui_platform_informations.theme.theme_colors.vitamui_header_footer }}",
    "vitamui-background": "{{ vitamui_platform_informations.theme.theme_colors.vitamui_background }}"
  },
  "PORTAL_MESSAGE": "{{ portal.message }}",
  "UI_URL": "{{ vitamui.portal.base_url }}",
  "ARCHIVES_SEARCH_URL": null,
  "PORTAL_URL": "{{ vitamui.portal.base_url }}",
  "ALLOWED_URLS": ["/portal-api"],
  "OIDC_CONFIG": {
    "issuer": "{{ vitamui.cas_server.base_url }}/oidc",
    "redirectUri": "?",
    "postLogoutRedirectUri": "{{ vitamui.portal.base_url }}/",
    "clientId": "portal",
    "responseType": "code",
    "scope": "openid",
    "showDebugInformation": false
  },
  "PORTAL_LOGO": "{{ vitamui.portal.portal_logo }}",
  "HEADER_LOGO": "{{ vitamui.portal.header_logo }}",
  "FOOTER_LOGO": "{{ vitamui.portal.footer_logo }}",
  "USER_LOGO": "{{ vitamui.portal.user_logo }}",
  {%- if vitamui.portal.has_tenant_list is defined or vitamui.portal.has_lang_selection is defined or vitamui.portal.has_site_selection is defined %}
  "UI": {
    {%- if vitamui.portal.has_tenant_list is defined %}
    "hasTenantList": {{ "true" if vitamui.portal.has_tenant_list else "false" }},
    {%- endif %}
    {%- if vitamui.portal.has_lang_selection is defined %}
    "hasLangSelection": {{ "true" if vitamui.portal.has_lang_selection else "false" }},
    {%- endif %}
    {%- if vitamui.portal.has_site_selection is defined %}
    "hasSiteSelection" : {{ "true" if vitamui.portal.has_site_selection else "false" }}
    {%- endif %}
  },
  {%- endif %}
  "CATEGORY_CONFIGURATION": [
    {%- for id, category in vitamui_defaults.portal_categories.items() %}
    {
      "displayTitle": {{ category.displayTitle | lower }},
      "identifier": "{{ id }}",
      "title": "{{ category.title }}",
      "order": {{ category.order }}
    }{{ ", " if not loop.last else "" }}
    {%- endfor %}
  ]
}
