ME_CONFIG_MONGODB_SERVER="{{ mongodb.host }}"
ME_CONFIG_MONGODB_PORT="{{ mongodb.mongod_port }}"

ME_CONFIG_SITE_BASEURL="{{ mongo_express_conf.baseuri | default('/') }}"
ME_CONFIG_MONGODB_ENABLE_ADMIN="true"
ME_CONFIG_MONGODB_ADMINUSERNAME="{{ mongodb.admin.user }}"
ME_CONFIG_MONGODB_ADMINPASSWORD="{{ mongodb.admin.password }}"
VCAP_APP_HOST="{{ ip_admin }}"
VCAP_APP_PORT="{{ mongo_express_conf.mongo_express_port | default('8101') }}"
{% if mongod_express_basicauth_username != '' %}
ME_CONFIG_BASICAUTH_USERNAME="{{ mongod_express_basicauth_username }}"
ME_CONFIG_BASICAUTH_PASSWORD="{{ mongod_express_basicauth_password }}"
{% else %}
ME_CONFIG_BASICAUTH_USERNAME=""
ME_CONFIG_BASICAUTH_PASSWORD=""
{% endif %}
