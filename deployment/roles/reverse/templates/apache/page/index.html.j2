<!doctype html>
<html lang="en" >
<head>
	<meta charset="utf-8">
	<meta name=viewport content="width=device-width, initial-scale = 1.0, maximum-scale=1.0, user-scalable=no">
	<meta name="format-detection" content="telephone=no">

	<title>VITAM - environnement : {{vitam_site_name}}</title>
	<link rel="icon" type="image/png" href="favicon.png" />
	<link rel="stylesheet" href="css/app.css" />

	<link rel="stylesheet" href="css/bootstrap.min.css" />
	<link rel="stylesheet" href="css/material-icons.css">
	<link rel="stylesheet" href="css/styles.css" />

	<script src="js/jquery.min.js"></script>
	<script src="js/bootstrap.min.js"></script>

</head>

<body  >

    <!--
    *
    *    #GLOBAL
    *
    *    @desc: Main container
    *
-->
<div id="global" class="container-fluid">

	<!-- MAIN HEADER -->
	<header id="mainHeader" class="navbar navbar-default navbar-fixed-top" >

		<div class="container-fluid">

			<div class="navbar-header">
				<a href="#" class="navbar-brand"><img class="logo img-responsive pull-left" src="images/logo.png" alt="Vitam" title="Vitam" />vitam</a>
			</div>

			<div id="navbar" class="navbar-collapse collapse" >
				<ul class="nav navbar-nav">
					<li>
						<a href="#">
							<i class="material-icons pull-left">search</i>
							<span class="pull-left m-l-10">Environnement : {{vitam_site_name}}</span>
						</a>
					</li>
					<li>
						<a href="#">
							<i class="material-icons pull-left">search</i>
							<span class="pull-left m-l-10">Déployé : {{ansible_date_time.date}} {{ansible_date_time.time}} ({{ansible_date_time.tz}})</span>
						</a>
					</li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li>
						<a href="#"></a>
					</li>
				</ul>
			</div>

		</div>

	</header>
	<!-- end MAIN HEADER -->

	<!-- ////////////////////////////////////////////////////////////////////////////// -->

	<div class="page-container" >
		<div class="page">

			<div class="panel panel-default col-md-12 container" style="margin-top: 50px">
				<a class="panel-header no-toggle" href="#">
					<h2>Métier</h2>
				</a>
				<div class="panel-body">
					<p class="row" style="vertical-align: middle">
						<div class="col-md-3">VITAM</div>
						<div class="col-md-2"><a href="/" class="btn btn-primary btn-xs" target="_blank">VITAMUI</a> </div>
					</p>
				</div>
			</div>

			<div class="panel panel-default col-md-12 container">
				<a class="panel-header no-toggle" href="#">
					<h2>Technique</h2>
				</a>
				<div class="panel-body">

{% if groups['hosts_vitamui_consul_server']|length >0 %}
					<p class="row" style="vertical-align: middle">
						<div class="col-md-3">Consul</div>
						<div class="col-md-2"><a href="/ui" class="btn btn-primary btn-xs" target="_blank">Portail Consul</a>&nbsp;<a href="/v1/health/state/any?pretty" class="btn btn-primary btn-xs" target="_blank">Services health</a></div>
					</p>
{% endif %}


					<p class="row" style="vertical-align: middle">
						<div class="col-md-3">MongoDB</div>
						<div class="col-md-2"><a href="/mongo-express" class="btn btn-primary btn-xs" target="_blank">Mongo express</a></div>
					</p>

				</div>
			</div>
		</div>
		<div class="panel panel-default col-md-12 container">
			<a class="panel-header no-toggle" href="#">
				<h2>Debug</h2>
			</a>
			<div class="panel-body">
				{% for item in groups['hosts_browse'] %}
				<p class="row" style="vertical-align: middle"><div class="col-md-3">{{item}}</div>
				<div class="col-md-2">
					<a href="/nodes/{{item}}/browse" class="btn btn-primary btn-xs" target="_blank">/vitamui browser</a>
				</div></p>
				{% endfor %}
			</div>
		</div>
	</div>
</div>
<!-- ////////////////////////////////////////////////////////////////////////////// -->
<!-- MAIN FOOTER -->
<footer class="mainFooter">
</footer>
<!-- end MAIN FOOTER -->
</div>
</body>
</html>
