db = db.getSiblingDB('iam')

print("START 01_add_consult_agencies_profil.js");

// Create new profile

db.profiles.insert({
	"_id" : "system_consult_agencies",
    "identifier" : NumberInt(33),
    "name": "Profil consultation des services agents",
    "description": "Profil de consultation du référentiel des services agent sans possibilité de mise à jour",
    "tenantIdentifier": NumberInt({{ vitamui_platform_informations.proof_tenant }}),
	"applicationName" : "AGENCIES_APP",
	"enabled" : true,
	"readonly" : true,
	"level" : "",
	"customerId" : "system_customer",
	"roles" : [
        {
            "name": "ROLE_GET_AGENCIES"
        }
	 ]
});


// Manage updating existant OTHER tenants customers with the new profile

var lastIdProfile = db.getCollection('sequences').findOne({ '_id': 'profile_identifier' }).sequence;

db.tenants.find({$and:[{ "identifier": { $gte: 0 } },{ "tenantIdentifier": { $ne: NumberInt({{ vitamui_platform_informations.proof_tenant }}) } }]}).forEach(function (tenant) {

    db.profiles.insert({
        "_id": "PROFIL_" + tenant.identifier + "-AGENCIES_APP-CONSULTATION",
        "identifier": NumberInt(lastIdProfile++),
        "name": "Profil consultation des services agents",
        "description": "Profil de consultation du référentiel des services agent sans possibilité de mise à jour",
        "tenantIdentifier": NumberInt(tenant.identifier),
        "applicationName": "AGENCIES_APP",
        "level": "",
        "enabled": true,
        "readonly": false,
        "customerId": tenant.customerId,
        "roles": [
            {
                "name": "ROLE_GET_AGENCIES"
            }
        ]
    });

});

// Update sequence
db.sequences.updateOne({
    "_id": "profile_identifier"
}, {
    $set: {
        "sequence": NumberInt(lastIdProfile)
    }
});

print("END 01_add_consult_agencies_profil.js");
